{
   "compilerOptions": {
      "rootDir": "src",
      "declaration": true,
      "declarationDir": "lib",
      "module": "esnext",
      "target": "es5",
      "downlevelIteration": true,
      "lib": ["es6", "dom", "es2016", "es2017"],
      "sourceMap": true,
      "jsx": "react",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "typeRoots": ["types", "node_modules/@types"]
   },
   "include": ["src/**/*"],
   "exclude": [
      "node_modules",
      "lib",
      "./src/**/**.test.tsx",
      "./src/**/**.test.ts",
      "./src/**/**.stories.ts",
      "./src/**/**.stories.tsx"
   ]
}
